{
    "id": "filter_geometry",
    "summary": "Filter spatially by geometry",
    "description": "Limits the data cube to the specified geometry. The dimensionality and resolution don't change.",
    "categories": [
        "filter"
    ],
    "parameter_order": ["data", "geometry"],
    "parameters": {
        "data": {
            "description": "A data cube.",
            "schema": {
                "type": "object",
                "format": "raster-cube"
            },
            "required": true
        },
        "geometry": {
            "description": "A geometry, either a GeoJSON or a vector data cube.\n\nIf multiple geometries are passed, the intersection of all geometries is used as geometry.",
            "schema": {
                "oneOf": [
                    {
                        "type": "object",
                        "format": "geojson"
                    },
                    {
                        "type": "object",
                        "format": "vector-cube"
                    }
                ]
            },
            "required": true
        }
    },
    "returns": {
        "description": "A data cube with only data located in the geometry.",
        "schema": {
            "type": "object",
            "format": "raster-cube"
        }
    }
}