{
    "id": "if",
    "summary": "If-Then-Else conditional",
    "description": "If the value passed is `true`, returns the value of the `accept` parameter.\nIf the value passed is `false`, returns the value of the `reject` parameter.\nThe no-data value `null` is passed through and therefore gets propagated.\n\nThis is basically an if-then-else construct as in other programming languages.",
    "categories": [
        "logic",
        "comparison",
        "masks"
    ],
    "parameter_order": [
        "value",
        "accept",
        "reject"
    ],
    "parameters": {
        "value": {
            "description": "A boolean value.",
            "schema": {
                "type": [
                    "boolean",
                    "null"
                ]
            },
            "required": true
        },
        "accept": {
            "description": "A value that is returned if the boolean value is `true`. Defaults to `true`.",
            "schema": {
                "description": "Any data type is allowed."
            },
            "default": true
        },
        "reject": {
            "description": "A value that is returned if the boolean value is `false`. Defaults to `false`.",
            "schema": {
                "description": "Any data type is allowed."
            },
            "default": false
        }
    },
    "returns": {
        "description": "Either the `accept` or `reject` argument depending on the given boolean value.",
        "schema": {
            "description": "Any data type is allowed."
        }
    },
    "examples": [
        {
            "arguments": {
                "value": true
            },
            "returns": true
        },
        {
            "arguments": {
                "value": null
            },
            "returns": null
        },
        {
            "arguments": {
                "value": false
            },
            "returns": false
        },
        {
            "arguments": {
                "value": true,
                "accept": "A"
            },
            "returns": "A"
        },
        {
            "arguments": {
                "value": false,
                "accept": [
                    1,
                    2,
                    3
                ],
                "reject": [
                    4,
                    5,
                    6
                ]
            },
            "returns": [
                4,
                5,
                6
            ]
        }
    ]
}